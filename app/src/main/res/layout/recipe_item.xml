<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp"
    >
    <LinearLayout
        android:id="@+id/lineairLayout_recipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView
            android:id="@+id/textview_recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textview_recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/textview_recipe_preperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/textview_recipe_calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="italic"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_recipe_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_launcher_background" />
</LinearLayout>